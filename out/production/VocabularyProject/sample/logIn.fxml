<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="405.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LogIn">
    <children>
        <Button fx:id="logInButton" layoutX="436.0" layoutY="359.0" mnemonicParsing="false"
                onAction="#onLogInButtonPressed" text="log in"/>
        <Label layoutX="222.0" layoutY="17.0" text="Sign Up Form">
            <font>
                <Font name="Bell MT" size="18.0"/>
            </font>
            <textFill>
                <LinearGradient endX="0.36666666666666664" endY="0.519047619047619" proportional="false"
                                startX="0.3333333333333333" startY="0.2619047619047619">
                    <stops>
                        <Stop color="#dd1e1e"/>
                        <Stop color="#6aa5b5" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>
        <TextField fx:id="firstNameField" layoutX="115.0" layoutY="69.0" promptText="Enter First Name"/>
        <TextField fx:id="lastNameField" layoutX="115.0" layoutY="130.0" promptText="Enter Last Name"/>
        <TextField fx:id="userNameField" layoutX="114.0" layoutY="195.0" promptText="Enter User Name"/>
        <Label layoutX="14.0" layoutY="73.0" text="First Name : "/>
        <Label layoutX="14.0" layoutY="134.0" text="Last Name : "/>
        <Label layoutX="14.0" layoutY="199.0" text="User Name : "/>
        <Label layoutX="14.0" layoutY="261.0" text="Password : "/>
        <Label layoutX="13.0" layoutY="317.0" text="Retype-Password"/>
        <PasswordField fx:id="rePasswordField" layoutX="113.0" layoutY="314.0" promptText="Retype-Password"/>
        <PasswordField fx:id="passwordField" layoutX="114.0" layoutY="257.0" promptText="Enter Password "/>
        <Button fx:id="signUpButton" layoutX="131.0" layoutY="357.0" mnemonicParsing="false"
                onAction="#onSignUpButtonPressed" text="Sign Up"/>
    </children>
</AnchorPane>
